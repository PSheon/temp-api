{
  "name": "node-api-factory-skeleton",
  "version": "1.0.3",
  "description": "Node.js express.js MongoDB JWT REST API - This is a basic API REST skeleton written on JavaScript using async/await. Great for building a starter web API for your front-end (Android, iOS, Vue, react, angular, or anything that can consume an API)",
  "license": "MIT",
  "author": "PSheon",
  "repository": {
    "type": "git",
    "url": "https://github.com/PSheon/Node-API-skeleton.git"
  },
  "scripts": {
    "start": "NODE_ENV=production cross-env pm2 start server.js --name API -i 4",
    "mocha": "NODE_ENV=test nyc mocha --timeout=5000 --exit",
    "test": "NODE_ENV=test npm run fresh-db && npm run mocha",
    "dev": "NODE_ENV=development cross-env nodemon server.js",
    "fresh-db": "npm run clean-db && npm run seed-db",
    "clean-db": "NODE_ENV=test node utils/database/clean.js",
    "seed-db": "NODE_ENV=test node utils/database/seed.js",
    "format": "prettier --write --config .prettierrc.json \"**/*.js\"",
    "lint": "eslint --fix --config .eslintrc.json \"**/*.js\"",
    "remark": "remark . -o"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm run remark",
      "pre-push": "npm run test"
    }
  },
  "dependencies": {
    "axios": "^0.19.2",
    "bcrypt": "^4.0.1",
    "bluebird": "^3.7.2",
    "body-parser": "^1.19.0",
    "bull": "^3.13.0",
    "bull-board": "^0.7.0",
    "cfonts": "^2.8.2",
    "chalk": "^4.0.0",
    "compression": "^1.7.4",
    "config": "^3.3.1",
    "cors": "^2.8.5",
    "date-fns": "^2.11.1",
    "ejs": "^3.0.2",
    "event-loop-stats": "^1.3.0",
    "expeditious-engine-redis": "^0.1.2",
    "express": "^4.17.1",
    "express-expeditious": "^5.1.1",
    "express-validator": "^6.4.0",
    "file-stream-rotator": "^0.5.7",
    "helmet": "^3.22.0",
    "i18n": "^0.8.6",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.9.6",
    "mongoose-paginate-v2": "^1.3.7",
    "morgan": "^1.10.0",
    "nodemailer": "^6.4.6",
    "nodemailer-mailgun-transport": "^2.0.0",
    "ora": "^4.0.4",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "pidusage": "^2.0.18",
    "pm2": "^4.4.0",
    "remark-cli": "^8.0.0",
    "request-ip": "^2.1.3",
    "socket.io": "^2.3.0",
    "trim-request": "^1.0.6",
    "uuid": "^7.0.3",
    "validator": "^13.0.0"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "cross-env": "^7.0.2",
    "eslint": "^6.8.0",
    "eslint-config-formidable": "^4.0.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-prettier": "^3.1.2",
    "faker": "^4.1.0",
    "husky": "^4.2.3",
    "mocha": "^7.1.1",
    "mongo-seeding": "^3.4.0",
    "nodemon": "^2.0.2",
    "nyc": "^15.0.1",
    "prettier": "^2.0.3",
    "prettier-eslint": "^9.0.1",
    "swagger-jsdoc": "^4.0.0",
    "swagger-ui-express": "^4.1.4"
  },
  "keywords": [
    "javascript",
    "api",
    "node",
    "express",
    "mongo",
    "mongodb",
    "jwt",
    "postman",
    "i18n",
    "jwt-authentication",
    "token",
    "eslint",
    "starter",
    "web",
    "app",
    "mongoose",
    "rest",
    "skeleton",
    "async",
    "await",
    "testing",
    "prettier",
    "mocha",
    "chai",
    "redis",
    "JSDoc"
  ]
}
